{
	"name": "Web Scraper",
	"description": "Scrape content from any web page",
	"version": "0.5",
	"manifest_version": 2,
	"icons": {
		"48": "logo.png",
		"96": "logo.png"
	},
	"permissions": [
		"tabs",
		"activeTab",
		"scripting",
		"storage",
		"contextMenus",
		"http://127.0.0.1:8000/*"
	],
	"browser_action": {
		"default_icon": "logo.png"
	},
	"content_scripts": [
		{
			"matches": ["https://web.telegram.org/*"],
			"js": ["telegram.js"]
		},
		{
			"matches": ["https://web.whatsapp.com/"],
			"js": ["whatsapp.js"]
		}
	],
	"background": {
		"scripts": ["background.js"]
	},
	"content_security_policy": {
		"extension_pages": "default-src 'self'; connect-src http://127.0.0.1:8000"
	}
}
