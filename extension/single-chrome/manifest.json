{
    "name": "Web Scraper",
    "description": "Scrape content from any web page",
    "version": "0.5",
    "manifest_version": 3,
    "action":{
        "default_icon":"logo.png"
    },
    "permissions": [
		"tabs",
		"activeTab",
		"scripting",
		"storage"
	],
	"web_accessible_resources": [
		{
		  "resources": [
			"processContent.js"
		  ],
		  "matches": [
			"<all_urls>"
		  ]
		}
	  ],
	"content_scripts":[
		{
			"matches": ["https://twitter.com/*"],
			"js": ["twitter.js"],
			"run_at": "document_idle"
			
		},
		{
			"matches": ["https://www.facebook.com/*"],
			"js": ["facebook.js"],
			"run_at": "document_idle"
		},
		{
			"matches": ["<all_urls>"],
			"exclude_matches": ["https://www.facebook.com/*","https://twitter.com/*"],
			"js": ["newsarticles.js"],
			"run_at": "document_idle"						
		}
	],
	"background": {
		"service_worker": "background.js"
	}
}
